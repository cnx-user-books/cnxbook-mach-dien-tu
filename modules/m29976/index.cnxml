                    <m:mtext>.</m:mtext>
                    <m:mi>v</m:mi>
                    <m:mtext>.</m:mtext>
                    <m:msup>
                      <m:mtext>10</m:mtext>
                      <m:mstyle fontsize="8pt">
                        <m:mrow>
