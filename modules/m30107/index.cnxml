                    <m:mstyle fontstyle="italic">
                      <m:mrow>
                        <m:mtext>nA</m:mtext>
                      </m:mrow>
                    </m:mstyle>
                    <m:mtext>.</m:mtext>
                    <m:mfrac>
                      <m:msup>
                        <m:mn>2</m:mn>
                        <m:mstyle fontsize="8pt">
                          <m:mrow>
                            <m:mrow>
                              <m:mtext>100</m:mtext>
                              <m:mo stretchy="false">−</m:mo>
                              <m:mtext>25</m:mtext>
                            </m:mrow>
                          </m:mrow>
                        </m:mstyle>
                      </m:msup>
                      <m:mtext>10</m:mtext>
                    </m:mfrac>
                  </m:mrow>
