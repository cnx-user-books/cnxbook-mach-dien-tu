                                    </m:mrow>
                                  </m:mstyle>
                                </m:msub>
                              </m:mfrac>
                            </m:msup>
                          </m:mrow>
                        </m:mrow>
                      </m:mstyle>
                      <m:mstyle fontsize="12pt">
                        <m:mrow>
                          <m:mrow>
                            <m:mo stretchy="false">−</m:mo>
                            <m:msub>
                              <m:mi>I</m:mi>
