                        </m:msub>
                      </m:mrow>
                      <m:mstyle fontsize="12pt">
                        <m:mrow>
                          <m:mrow>
                            <m:mtext>.</m:mtext>
                            <m:msup>
                              <m:mi>e</m:mi>
                              <m:mfrac>
                                <m:mi>V</m:mi>
