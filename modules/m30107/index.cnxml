            </m:mrow>
            <m:annotation encoding="StarMath 5.0"> size 12{ {}="25" ital "nA" "."  {  {2 rSup { size 8{"100" - "25"} } }  over  {"10"} } } {}</m:annotation>
          </m:semantics>
        </m:math>
      </para>
      <para id="id5822368">
        <m:math>
          <m:semantics>
            <m:mrow>
              <m:mstyle fontsize="12pt">
                <m:mrow>
                  <m:mrow>
                    <m:mrow>
                      <m:mrow/>
